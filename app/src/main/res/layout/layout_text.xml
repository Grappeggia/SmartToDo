<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_item_id">

        <TextView
            android:id="@+id/text_item_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/todo_text_height"
            android:text="@string/todo_sampletext"
            android:textSize="@dimen/todo_text_size" />
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/todo_text_divider_height"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_item_id"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="74dp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>